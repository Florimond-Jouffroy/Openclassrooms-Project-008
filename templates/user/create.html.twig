{% extends 'baseLogin.html.twig' %}

{% block header_title %}
	<h1>Créer un utilisateur</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form) }}
		{{ form_widget(form) }}

		<button type="submit" class="btn btn-success pull-right" name="addUser">S'inscrire</button>
		<div class="mt-4">
			<p>Vous etes déjà inscrit ?
				<a href="{{ path('app_login') }}">Connectez vous !</a>
			</p>

		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block header_img %}
	<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}
{% block body %}
	<a href="{{ path('task_list') }}" class="btn btn-primary mb-3">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
		</svg>
		Retour à la liste des tâches</a>
	<div class="">
		{{ form_start(form, {'action' : path('task_create')}) }}
		{{ form_widget(form) }}

		<button type="submit" name="addTask" class="btn btn-success pull-right">Ajouter</button>
		{{ form_end(form) }}


	</div>
{% endblock %}
